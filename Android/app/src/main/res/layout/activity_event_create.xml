<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_event_create"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.mj.cpfirebaseesportes.activities.EventCreateActivity">

    <FrameLayout
        android:id="@+id/event_create_fragment_holder"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_create_event"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_margin="@dimen/fab_margin"
            app:srcCompat="@android:drawable/ic_input_add"
            app:rippleColor="@android:color/white"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            app:layout_behavior="com.mj.cpfirebaseesportes.components.ScrollAwareFABBehavior" />

    </FrameLayout>


</RelativeLayout>
