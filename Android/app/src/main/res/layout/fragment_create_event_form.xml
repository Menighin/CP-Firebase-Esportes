<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mj.cpfirebaseesportes.fragments.CreateEventFormFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="1"
            android:paddingBottom="10dp">

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="14.30">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:inputType="text"
                    android:hint="Título"
                    android:id="@+id/et_titulo" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="14.30">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:inputType="text"
                    android:hint="Esporte"
                    android:id="@+id/et_esporte" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="14.30">

                <EditText
                    android:layout_width="match_parent"
                    android:inputType="text"
                    android:hint="Descrição"
                    android:id="@+id/et_descricao"
                    android:layout_height="65dp" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="14.30">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:inputType="text"
                    android:hint="Endereço"
                    android:id="@+id/et_local" />

            </android.support.design.widget.TextInputLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="14.30"
                android:paddingTop="20dp">

                <TextView
                    android:text="Data"
                    android:layout_width="wrap_content"
                    android:id="@+id/tv_data"
                    android:layout_weight="1"
                    android:textSize="20sp"
                    android:textAlignment="center"
                    android:layout_height="45dp" />

                <TextView
                    android:text="Horário"
                    android:layout_width="wrap_content"
                    android:id="@+id/tv_hora"
                    android:layout_weight="1"
                    android:textSize="20sp"
                    android:textAlignment="center"
                    android:layout_height="45dp" />

            </LinearLayout>


            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="14.30">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:inputType="number"
                    android:hint="Nº Pessoas"
                    android:id="@+id/et_pessoas" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="14.30">

                <EditText
                    android:id="@+id/et_valor"
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:inputType="numberDecimal"
                    android:hint="Valor" />
            </android.support.design.widget.TextInputLayout>

        </LinearLayout>
    </ScrollView>

</FrameLayout>
